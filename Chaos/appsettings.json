{
    "Options": {
        "CodePage": 949,
        "ActiveDirectoryCredentialManagerOptions": {
            "Directory": "..\\..\\..\\..\\Data\\Saved",
            "ValidCharactersPattern": "[a-zA-Z0-9 ]+",
            "ValidFormatPattern": "^[a-zA-Z]{3,}$|[a-zA-Z]{3,} ?[a-zA-Z]{3,}",
            "MaxUsernameLength": 12,
            "MinUsernameLength": 3,
            "MaxPasswordLength": 8,
            "MinPasswordLength": 5,
            "ReservedUsernames": [],
            "PhraseFilter": [],
            "HashAlgorithmName": "SHA512"
        },
        "ItemTemplateManagerOptions": {
            "Directory": "..\\..\\..\\..\\Data\\Templates\\Items"
        },
        "SkillTemplateManagerOptions": {
            "Directory": "..\\..\\..\\..\\Data\\Templates\\Skills"
        },
        "SpellTemplateManagerOptions": {
            "Directory": "..\\..\\..\\..\\Data\\Templates\\Spells"
        },
        "MapTemplateManagerOptions": {
            "Directory": "..\\..\\..\\..\\Data\\Templates\\Maps",
            "MapDataDirectory": "..\\..\\..\\..\\Data\\Maps"
        },
        "MapInstanceManagerOptions": {
            "Directory": "..\\..\\..\\..\\Data\\MapInstances"
        },
        "UserSaveManagerOptions": {
            "Directory": "..\\..\\..\\..\\Data\\Saved"
        },
        "MetafileManagerOptions": {
            "Directory": "..\\..\\..\\..\\Data\\Metafiles"
        },
        "LobbyOptions": {
            "HostName": "localhost",
            "Port": 4200,
            "Servers": [
                {
                    "Id": 0,
                    "Name": "LocalTest",
                    "HostName": "localhost",
                    "Port": 4201,
                    "Description": "Test server"
                }
            ]
        },
        "LoginOptions": {
            "HostName": "localhost",
            "Port": 4201,
            "WorldRedirect": {
                "HostName": "localhost",
                "Port": 4202
            },
            "StartingMapInstanceId": "Testing",
            "StartingPointStr": "(5, 5)",
            "NoticeMessage": "under construction"
        },
        "WorldOptions": {
            "HostName": "localhost",
            "Port": 4202,
            "LoginRedirect": {
                "HostName": "localhost",
                "Port": 4201
            },
            "RefreshIntervalMs": 1000,
            "TradeRange": 4,
            "DropRange": 4,
            "PickupRange": 4,
            "UpdatedPerSecond": 30,
            "SaveIntervalMins": 5
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "System": "Information",
            "Microsoft": "Information"
        },
        "NLog": {
            "throwConfigExceptions": true,
            "targets": {
                "async": false,
                "logfile": {
                    "type": "File",
                    "fileName": "logs\\${shortdate}.log",
                    "layout": "${pad:padding=-30:fixedLength=true:inner=${time}|${uppercase:${level}}}${logger:shortName=true}: ${message} ${exception:format=tostring}"
                    
                },
                "logconsole": {
                    "type": "ColoredConsole",
                    "layout": "${pad:padding=-22:fixedLength=true:inner=${time}|${uppercase:${level}}}${message} ${exception:format=tostring}",
                    "rowHighlightingRules": [
                        {
                            "condition": "level == LogLevel.Fatal",
                            "foregroundColor": "Red",
                            "backgroundColor": "White"
                        },
                        {
                            "condition": "level == LogLevel.Error",
                            "foregroundColor": "Red"
                        },
                        {
                            "condition": "level == LogLevel.Info",
                            "foregroundColor": "White"
                        },
                        {
                            "condition": "level == LogLevel.Debug",
                            "foregroundColor": "Blue"
                        }
                    ]
                }
            },
            "rules": [
                {
                    "logger": "*",
                    "minLevel": "Info",
                    "writeTo": "logconsole"
                },
                {
                    "logger": "*",
                    "minLevel": "Debug",
                    "writeTo": "logfile"
                }
            ]
        }
    }
}